---
import BaseLayout from "../layouts/BaseLayout.astro";

const description = "Kontakt und Erreichbarkeit.";
---

<BaseLayout title="Kontakt" description={description} bodyClass="theme--kontakt">
  <header class="hero">
    <div class="container">
      <span class="badge">Kontakt</span>
      <h1>Kontakt</h1>
      <p>Für Anfragen erreichen Sie mich per E-Mail.</p>
    </div>
  </header>

  <section class="section section--compact">
    <div class="container">
      <div class="card-grid">
        <article class="card card--compact">
          <h3>E-Mail</h3>
          <p>
            <a href="mailto:achtsamkeit@belight-leipzig.de">achtsamkeit@belight-leipzig.de</a>
          </p>
        </article>
        <article class="card card--compact">
          <h3>Adresse</h3>
          <address class="contact-address">c/o Be Light Yoga Studio · Nikolaistraße 33-37 · 04109 Leipzig</address>
        </article>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <header class="section-header">
        <h2>Standort</h2>
        <p class="section-intro">Be Light Yoga Studio · Nikolaistraße 33-37 · 04109 Leipzig</p>
      </header>
      <div class="map-link-box">
        <div class="card">
          <h3>Anfahrt</h3>
          <address class="contact-address">
            Be Light Yoga Studio<br />
            Nikolaistraße 33-37<br />
            04109 Leipzig
          </address>
          <a
            class="button"
            style="margin-top: 16px;"
            href="https://www.google.com/maps/search/?api=1&query=Be+Light+Yoga+Studio+Nikolaistraße+33-37+04109+Leipzig"
            target="_blank"
            rel="noopener noreferrer"
          >
            In Google Maps öffnen
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
